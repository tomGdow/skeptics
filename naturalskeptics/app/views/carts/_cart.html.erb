<h2 id = "cartheader">Your Cart </h2>

<table>
   <td></td>
  <td></td>
  <td>Unit Price</td>
  <%= render(cart.line_items) %>

 <tr>
   <td>Total Price</td><td></td> <td></td>
   <td> <%= number_to_currency(cart.total_price,
                              :unit => '&euro;',
                              precision: 0) %>
   </td>
 </tr>
</table>

<%= button_to 'Empty cart', @cart,
              :method => :delete,
              :id => "emptyCartButton",
              :confirm => 'Are you sure?',
              :class => "button secondary tiny  "%>


<div class ="checkOutButtons">
  <%= button_to "Checkout", new_order_path,
                method: :get,
                :id => "checkOutButton",
                :class => "button secondary tiny"%>

</div>
<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>