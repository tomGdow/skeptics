<!-- START:hidden_div (shopping Cart)-->
<% if @cart %>
    <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
        <%= render @cart %>
    <% end %>

<% end %>
<!-- END:hidden_div -->

<!-- START:hidden_div (Shopping Cart Empty-->
<% if @cart %>
    <%= hidden_div_unless(@cart.line_items.empty?, id: 'noCart') do %>
        <h3>Your Cart is Empty</h3>
    <% end %>
<% end %>
<!-- END:hidden_div -->